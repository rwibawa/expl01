{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/gen_id",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description":  "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "CodeLLDB",
      "program": "${workspaceFolder}/build/src/gen_id",
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "cpp"
      ],
      "terminal": "integrated",
      "linux": {
        "env": {
          "RUST_LOG": "error,codelldb=debug",
          "RUST_LOG_STYLE": "always",
          "RUST_BACKTRACE": "full",
          "CODELLDB_STARTUP": "script import debugpy; debugpy.configure(python='python3'); debugpy.connect(3470)"
        },
      },
      "osx": {
        "env": {
          "RUST_LOG": "error,codelldb=debug",
          "RUST_LOG_STYLE": "always",
          "RUST_BACKTRACE": "full",
          "CODELLDB_STARTUP": "script import debugpy; debugpy.configure(python='python3'); debugpy.connect(3470)"
        },
      },
      "windows": {
        "env": {
          "PATH": "${workspaceFolder}\\build\\src;${env:PATH}",
        },
      },
    }
  ]
}